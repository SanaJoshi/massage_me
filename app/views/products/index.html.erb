<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Image data</th>
      <th>Name</th>
      <th>Price</th>
      <th>Discription</th>
      <th colspan="3"></th>
    </tr>
  </thead>
        <!-- <td><%#= product.name %></td>
        <td><%#= product.price %></td>
        <td><%#= product.discription %></td> -->
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><img src="<%= product.image_url if defined? product.image_url %>" alt="Product Image"></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

